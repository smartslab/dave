<robot name="taskinterface" xmlns:xacro="http://www.ros.org/wiki/xacro" >

  <xacro:arg name="debug" default="0"/>
  <xacro:arg name="namespace" default="taskvisualizer"/>
  <xacro:arg name="inertial_reference_frame" default="world"/>
